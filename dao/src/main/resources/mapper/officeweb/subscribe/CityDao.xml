    <select id="getCities" resultType="com.toutiao.web.dao.entity.subscribe.CityInfo">
        SELECT
        city_id AS key, city_name AS label, city_domain AS cityDomain, is_show AS isShow
        FROM cities where 1 = 1
        <if test="isShow != null">
            and is_show = #{isShow}
        </if>
